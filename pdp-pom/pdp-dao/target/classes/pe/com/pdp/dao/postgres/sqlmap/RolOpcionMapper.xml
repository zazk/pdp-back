   <select id="selectMenu" parameterType="HashMap" resultMap="selectMenu_BaseResultMap">
   
    SELECT 
	        RXO.id as I_ROLXOPCION_ID
	        ,R.id as I_ROL_ID
	        ,R.nombre as V_ROL_NOMBRE
	        ,O.nombre as V_OPCION_NOMBRE
	        ,O.id as I_OPCION_ID
	        ,O.ind_padre as I_OPCION_INDPADRE
	        ,O.accion as V_OPCION_ACTION
	        ,O.modulo as I_OPCION_MODULO
	        ,O.imagen_icon as  IMAGE_ICON
	        ,O.ind_tipo_menu as I_TIPO_MENU
	        ,(SELECT COUNT(*) FROM "pataPerro".tm_opcion  OPC WHERE OPC.ind_padre=O.id ) AS CHILDRENS
	FROM 
	    "pataPerro".td_rol_opcion RXO
	INNER JOIN 
	    "pataPerro".tm_rol R ON R.id = RXO.rol_id
	INNER JOIN 
	   "pataPerro".tm_opcion O ON O.id = RXO.opcion_id
	WHERE
	  RXO.rol_id = #{IDROL}
	  
	  <if test="IND_TIPO_MENU != null">
		  	and O.ind_tipo_menu=${IND_TIPO_MENU}
	  </if>
	ORDER BY O.orden ASC 

