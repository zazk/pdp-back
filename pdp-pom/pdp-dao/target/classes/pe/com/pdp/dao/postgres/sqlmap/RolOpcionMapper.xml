   <select id="selectTreeRolOpcion" parameterType="HashMap" resultMap="selectTree_BaseResultMap">
   
   SELECT
			RXO.id as I_ROLXOPCION_ID
			,RXO.rol_id as I_ROL_ID
			,O.nombre as V_OPCION_NOMBRE
			,O.id as I_OPCION_ID
			,O.ind_padre  as I_OPCION_INDPADRE
			,O.accion as V_OPCION_ACTION
			,O.modulo as I_OPCION_MODULO
			,O.ind_tipo_menu as I_TIPO_MENU
			 ,O.imagen_icon as  IMAGE_ICON
			,(SELECT COUNT(*) FROM "pataPerro".tm_opcion OPC WHERE
			OPC.ind_padre=O.id ) AS CHILDRENS
	FROM 
		"pataPerro".tm_opcion  O
	LEFT OUTER JOIN 
		 "pataPerro".td_rol_opcion RXO ON (RXO.opcion_id=O.id AND RXO.rol_id=#{IDROL})
	WHERE
		O.estado=1 
		  <if test="IND_TIPO_MENU != null">
		  	and O.ind_tipo_menu=${IND_TIPO_MENU}
		  </if>
	ORDER BY
		O.orden ASC 
   
