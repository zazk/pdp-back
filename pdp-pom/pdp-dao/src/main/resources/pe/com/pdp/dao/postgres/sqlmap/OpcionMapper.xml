	  		opc.id, 
	  		opc.nombre, 
	  		CASE WHEN opc.accion!='' THEN opc.accion ELSE '--'END AS accion,
			case  when (ind_padre<![CDATA[ <>]]>0) then (select opcpadre.nombre  FROM "pataPerro".tm_opcion opcpadre where opcpadre.id=opc.ind_padre)
